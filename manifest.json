{
  "manifest_version": 3,
  "name": "Scriptor",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["https://*.youtube.com/*"],
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/contentScript/main.tsx"],
      "run_at": "document_end",
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "serviceWorker.ts"
  }
}
